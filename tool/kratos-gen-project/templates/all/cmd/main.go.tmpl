package main

import (
	"flag"
	"os"
	"os/signal"
	"syscall"
	"time"

	"{{.ModPrefix}}{{.Name}}/internal/di"
	"kratos/pkg/conf/paladin"
	"kratos/pkg/net/trace"
	"kratos/pkg/log"

)

func main() {
	flag.Parse()
	err := paladin.Init()
	if err != nil {
    	log.Error("paladin.Init error error(%v)", err)
    	panic("paladin.Init error")
    }
	slsConf := log.NewSLSCfg()
    sls, err := log.NewAliSLS(slsConf)
    if err != nil {
    	panic(err)
    }
    logConf := &log.Config{Stdout: false}
    log.Init(logConf, sls) // debug flag: log.dir={path}
	defer log.Close()
	log.Info("{{.Name}} start")

    trace.Init(nil)
    defer trace.Close()
	_, closeFunc, err := di.InitApp()
	if err != nil {
		panic(err)
	}
	c := make(chan os.Signal, 1)
	signal.Notify(c, syscall.SIGHUP, syscall.SIGQUIT, syscall.SIGTERM, syscall.SIGINT)
	for {
		s := <-c
		log.Info("get a signal %s", s.String())
		switch s {
		case syscall.SIGQUIT, syscall.SIGTERM, syscall.SIGINT:
			closeFunc()
			log.Info("{{.Name}} exit")
			time.Sleep(time.Second)
			return
		case syscall.SIGHUP:
		default:
			return
		}
	}
}
